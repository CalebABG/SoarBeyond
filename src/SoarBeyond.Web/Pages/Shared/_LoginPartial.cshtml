@using Microsoft.AspNetCore.Identity
@using SoarBeyond.Data.Entities

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@inject SignInManager<UserEntity> SignInManager

<div class="my-2">
    @if (SignInManager.IsSignedIn(User))
    {
        <div class="btn-toolbar my-2">
            <a class="btn btn-primary me-2" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                @User.Identity!.Name
            </a>
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/" method="post">
                <button type="submit" class="btn btn-secondary">Logout</button>
            </form>
        </div>
    }
    else
    {
        <div class="btn-toolbar my-2">
            <a class="btn btn-primary me-2" asp-area="Identity" asp-page="/Account/Register">Register</a>
            <a class="btn btn-secondary" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </div>
    }
</div>