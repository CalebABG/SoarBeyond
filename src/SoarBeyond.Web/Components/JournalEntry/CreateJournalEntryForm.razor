@namespace SoarBeyond.Web.Components

@inherits SoarBeyondComponentBase

@using static SoarBeyond.Shared.Extensions.CommonExtensions

<div @attributes="@ComponentAttributes"
     class="@ComponentClasses"
     style="@ComponentStyles">
    <div class="card-body">
        <h5 class="card-title mb-3">
            Create a Journal Entry
        </h5>

        <div class="card-text">
            <EditForm Model="@_journalEntry" OnValidSubmit="@HandleValidSubmitAsync">
                <FluentValidationValidator />

                <div class="container">
                    <div class="form-group mb-3">
                        <label class="form-label">
                            @LabelFor(() => _journalEntry.Title)
                        </label>
                        <InputText class="form-control" @bind-Value="_journalEntry.Title" />
                        <ValidationMessage For="@(() => _journalEntry.Title)" />
                    </div>

                    <div class="form-group">
                        <label class="form-label">
                            @LabelFor(() => _journalEntry.Content)
                        </label>
                        <InputTextArea class="form-control" @bind-Value="_journalEntry.Content" />
                        <ValidationMessage For="@(() => _journalEntry.Content)" />
                    </div>

                    @if (_addThoughts)
                    {
                        <BSDialog ExtraClass="modal-lg modal-dialog-centered" 
                                  @bind-ShowDialog="_addThoughts">
                            <DialogTitle>
                                <h5 class="m-0">Add a Thought</h5>
                            </DialogTitle>

                            <DialogBody>
                                <CreateThoughtForm OnValidSubmit="@AddThought"/>
                            </DialogBody>
                        </BSDialog>
                    }

                    @if (_journalEntry.Thoughts.Count > 0)
                    {
                        <hr class="my-4" />

                        <h5 class="mb-3">Thoughts</h5>

                        <CollectionView Context="thought"
                                        Class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4"
                                        Data="@_journalEntry.Thoughts">
                            <ItemTemplate>
                                <div @key="@thought">
                                    <ThoughtView Thought="@thought"
                                                 ShowHeader="@false"
                                                 ShowActionButtons="@true"
                                                 OnDeleteThought="@RemoveThought" />
                                </div>
                            </ItemTemplate>
                        </CollectionView>
                    }
                </div>

                <div class="btn-group mt-4" role="group">
                    <BSButton Type="submit" Disabled="@IsBusy">
                        Create
                    </BSButton>

                    <BSButton Class="btn btn-secondary"
                              Disabled="@IsBusy"
                              ShowSpinner="@false"
                              @onclick="@ToggleThoughtDialog">
                        Add Thoughts
                    </BSButton>
                </div>
            </EditForm>
        </div>
    </div>
</div>