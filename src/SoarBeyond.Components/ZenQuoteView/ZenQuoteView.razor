@namespace SoarBeyond.Components

@inherits SoarBeyondComponentBase

@if (Quote is not null)
{
    <div @attributes="@ComponentAttributes"
         class="@ComponentClasses"
         style="@ComponentStyles">
        <p class="lead text-white">
            @DateTime.Now.ToString("ddd MMM dd, yyyy")
        </p>

        <blockquote>
            <p class="text-white">“@Quote.Quote”</p>

            <footer class="blockquote-footer text-white mt-2">
                @Quote.Author

                @if (!Quote.IsDefault)
                {
                    @* Attribution to ZenQuotes *@
                    <p class="mt-3" style="font-size: 1rem">
                        Provided by:
                        <a id="zenQuoteLink"
                           href="https://zenquotes.io/"
                           target="_blank" rel="noreferrer">
                            ZenQuotes
                        </a>
                    </p>
                }
            </footer>
        </blockquote>
    </div>
}